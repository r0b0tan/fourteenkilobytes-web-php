# nginx configuration for fourteenkilobytes
# Copy to /etc/nginx/sites-available/ and symlink to sites-enabled/
#
# Adjust:
#   - server_name
#   - root path
#   - SSL certificate paths
#   - PHP-FPM socket version (php8.3-fpm.sock)
#
# Important:
#   - Set open_basedir in /etc/php/8.3/fpm/php.ini to include your root
#   - Set data/ ownership: sudo chown -R www-data:www-data /path/to/data/
#
# After changes: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 443 ssl;
    server_name yourdomain.com;

    root /var/www/fourteenkilobytes;
    index index.php;

    ssl_certificate     /etc/letsencrypt/live/yourdomain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/yourdomain.com/privkey.pem;

    # Sensitive files - block direct access
    location ~* \.(bak|json|md|log)$ {
        deny all;
    }

    # data/ directory - block access
    location ~ ^/data/ {
        deny all;
    }

    # Redirect to setup wizard if not completed
    # This uses an internal variable to check file existence and redirect
    set $setup_complete 0;
    if (-f $document_root/data/.setup-complete) {
        set $setup_complete 1;
    }
    
    # Only redirect if not already in setup, api, or accessing static files
    set $redirect_to_setup "${setup_complete}${uri}";
    if ($redirect_to_setup ~* "^0(?!/setup)(?!/api).*$") {
        return 302 /setup/;
    }

    # Setup wizard routing
    location /setup/ {
        try_files $uri /setup/index.php;
    }
    
    location ~ ^/setup/api\.php {
        fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        include fastcgi_params;
    }

    # API requests -> api/index.php
    location /api/ {
        try_files $uri /api/index.php?$query_string;
    }

    # Admin panel - serve from public/admin/
    # ^~ ensures priority over regex locations (static assets, json deny)
    location ^~ /admin {
        add_header X-Robots-Tag "noindex, nofollow" always;
        add_header Cache-Control "no-store" always;

        # /admin or /admin/ -> index.html
        rewrite ^/admin/?$ /public/admin/index.html break;

        # Paths with file extension -> serve directly
        rewrite ^/admin/(.+\..+)$ /public/admin/$1 break;

        # Paths without extension -> append .html
        rewrite ^/admin/(.+)$ /public/admin/$1.html break;
    }

    # RSS Feed
    location = /feed.xml {
        rewrite ^ /feed.php last;
    }

    # Static assets
    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff2?)$ {
        try_files $uri =404;
        expires 7d;
        access_log off;
    }

    # Blog slugs and main route -> index.php
    location / {
        rewrite ^/([a-z0-9-]+)/?$ /index.php?slug=$1 last;
        try_files $uri /index.php?$query_string;
    }

    # PHP-FPM
    location ~ \.php$ {
        include fastcgi.conf;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass unix:/run/php/php8.3-fpm.sock;
    }
}
