{
  "name": "web-php",
  "version": "1.0.0",
  "description": "A lightweight, experimental CMS built with PHP that enforces a strict **14,336-byte size limit** per page. This constraint encourages minimalist design and efficient content creation.",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:php": "./vendor/bin/phpunit",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "update:mock:on": "bash ./test-tools/toggle-update-check.sh on-auto",
    "update:mock:off": "bash ./test-tools/toggle-update-check.sh off",
    "update:mock:status": "bash ./test-tools/toggle-update-check.sh status",
    "update:mock:check": "bash ./test-tools/toggle-update-check.sh check"
  },
  "keywords": [],
  "author": "Christoph Bauer",
  "license": "ISC",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "fast-check": "^4.5.3",
    "happy-dom": "^20.6.1",
    "vitest": "^4.0.18"
  }
}
